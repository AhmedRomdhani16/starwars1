pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'} 
    
     
     
    stages { 
    
    stage('SCM') {
            steps {
                git  branch: 'main', url: 'https://github.com/AhmedRomdhani16/starwars1'
            }
        }
    stage('PULL Image Frontend') {
            steps{
            
                echo "#################### Pull Image ms-frontend to azurecr.io #################"
                sh ''' 



                        docker pull imagedockerpaas.azurecr.io/frontend:b47baac5140125b28dc3951b414a582a9dcda4fe

                '''
            }
        }
        
        stage('TAG Image Frontend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  


                        docker tag imagedockerpaas.azurecr.io/frontend:b47baac5140125b28dc3951b414a582a9dcda4fe reposittoryprod.azurecr.io/frontendprod:b47baac5140125b28dc3951b414a582a9dcda4fe

                        '''
            }
        }
        
        stage('PUSH Image Frontend') {
            steps{
                echo "#################### Push Image ms-frontend to azurecr.io #################"
                sh ''' 
                
                



                        docker push reposittoryprod.azurecr.io/frontendprod:b47baac5140125b28dc3951b414a582a9dcda4fe

                        
                        
                '''
            }
        }
        stage('Pull Image Backend') {
            steps{

                echo "#################### Pull Image Backend #################"
                sh '''  



                        docker pull imagedockerpaas.azurecr.io/backend:b47baac5140125b28dc3951b414a582a9dcda4fe

                '''
               
                
                
                
            } 
        } 
        
        
        stage('TAG Image Backend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  


                        docker tag imagedockerpaas.azurecr.io/backend:b47baac5140125b28dc3951b414a582a9dcda4fe reposittoryprod.azurecr.io/backendprod:b47baac5140125b28dc3951b414a582a9dcda4fe

                        '''
            }
        }
        
        stage('Push Image Backend') {
            steps{

                echo "#################### Push Image Backend #################"
                sh '''  



                        docker push reposittoryprod.azurecr.io/backendprod:b47baac5140125b28dc3951b414a582a9dcda4fe

                '''
               
                
                
                
            } 
        } 

    
    
    
    
    
    
    
    
    
    
    
    
    
    }
    
    
    
    
    
    }
