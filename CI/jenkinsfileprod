pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'} 
    
     
     
    stages { 
    
    stage('SCM') {
            steps {
                git  branch: 'main', url: 'https://github.com/AhmedRomdhani16/starwars1'
            }
        }
    stage('PULL Image Frontend') {
            steps{
            
                echo "#################### Pull Image ms-frontend to azurecr.io #################"
                sh ''' 

                        docker pull imagedockerpaas.azurecr.io/frontend:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                '''
            }
        }
        
        stage('TAG Image Frontend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  
                        docker tag imagedockerpaas.azurecr.io/frontend:15fedff6ca4b00ca0ecbec0c9990e15076cf1411 reposittoryprod.azurecr.io/frontendprod:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                        '''
            }
        }
        
        stage('PUSH Image Frontend') {
            steps{
                echo "#################### Push Image ms-frontend to azurecr.io #################"
                sh ''' 
                
                

                        docker push reposittoryprod.azurecr.io/frontendprod:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                        
                        
                '''
            }
        }
        stage('Pull Image Backend') {
            steps{

                echo "#################### Pull Image Backend #################"
                sh '''  

                        docker pull imagedockerpaas.azurecr.io/backend:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                '''
               
                
                
                
            } 
        } 
        
        
        stage('TAG Image Backend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  
                        docker tag imagedockerpaas.azurecr.io/backend:15fedff6ca4b00ca0ecbec0c9990e15076cf1411 reposittoryprod.azurecr.io/backendprod:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                        '''
            }
        }
        
        stage('Push Image Backend') {
            steps{

                echo "#################### Push Image Backend #################"
                sh '''  

                        docker push reposittoryprod.azurecr.io/backendprod:15fedff6ca4b00ca0ecbec0c9990e15076cf1411
                '''
               
                
                
                
            } 
        } 

    
    
    
    
    
    
    
    
    
    
    
    
    
    }
    
    
    
    
    
    }
