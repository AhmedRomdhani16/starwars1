pipeline {    
    options { skipDefaultCheckout() }
    agent {label 'jenkinsmaster'} 
    
     
     
    stages { 
    
    stage('SCM') {
            steps {
                git  branch: 'main', url: 'https://github.com/AhmedRomdhani16/starwars1'
            }
        }
    stage('PULL Image Frontend') {
            steps{
            
                echo "#################### Pull Image ms-frontend to azurecr.io #################"
                sh ''' 

                        docker pull imagedockerpaas.azurecr.io/frontend:c3360bac712995c52f8911efb8c21e95f216fed0
                '''
            }
        }
        
        stage('TAG Image Frontend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  
                        docker tag imagedockerpaas.azurecr.io/frontend:c3360bac712995c52f8911efb8c21e95f216fed0 reposittoryprod.azurecr.io/frontendprod:c3360bac712995c52f8911efb8c21e95f216fed0
                        '''
            }
        }
        
        stage('PUSH Image Frontend') {
            steps{
                echo "#################### Push Image ms-frontend to azurecr.io #################"
                sh ''' 
                
                

                        docker push reposittoryprod.azurecr.io/frontendprod:c3360bac712995c52f8911efb8c21e95f216fed0
                        
                        
                '''
            }
        }
        stage('Pull Image Backend') {
            steps{

                echo "#################### Pull Image Backend #################"
                sh '''  

                        docker pull imagedockerpaas.azurecr.io/backend:c3360bac712995c52f8911efb8c21e95f216fed0
                '''
               
                
                
                
            } 
        } 
        
        
        stage('TAG Image Backend') {
            steps{

                echo "#################### Tag Image Backend #################"
                sh '''  
                        docker tag imagedockerpaas.azurecr.io/backend:c3360bac712995c52f8911efb8c21e95f216fed0 reposittoryprod.azurecr.io/backendprod:c3360bac712995c52f8911efb8c21e95f216fed0
                        '''
            }
        }
        
        stage('Push Image Backend') {
            steps{

                echo "#################### Push Image Backend #################"
                sh '''  

                        docker push reposittoryprod.azurecr.io/backendprod:c3360bac712995c52f8911efb8c21e95f216fed0
                '''
               
                
                
                
            } 
        } 

    
    
    
    
    
    
    
    
    
    
    
    
    
    }
    
    
    
    
    
    }
